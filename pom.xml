	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<targetJdk>1.6</targetJdk>
		<maven.test.jvmargs>-javaagent:./script/spring-instrument-3.0.5.RELEASE.jar</maven.test.jvmargs>

