		<miglayout-swing>4.2</miglayout-swing>
		<spring.version>3.0.5.RELEASE</spring.version>
		<aspectjrt.version>1.6.11</aspectjrt.version>
		<aspectjweaver.version>1.6.11</aspectjweaver.version>
